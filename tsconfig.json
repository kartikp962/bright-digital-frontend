{
  "compilerOptions": {
    "jsx": "react-jsx", // ✅ Required for React 17+ with JSX
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": "src", // ✅ Optional but useful for '@/...' imports
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
